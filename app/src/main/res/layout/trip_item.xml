<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/flight_card"
    android:orientation="vertical"
    android:padding="16dp"
    android:elevation="4dp"
    android:layout_margin="8dp">

    <!-- Passenger Name -->
    <TextView
        android:id="@+id/tvPassengerName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Passenger: John Doe"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        android:paddingBottom="4dp" />

    <!-- Bus Name -->
    <TextView
        android:id="@+id/tvBusName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Bus: Express Travels"
        android:textSize="14sp"
        android:textColor="@android:color/black"
        android:paddingBottom="4dp" />

    <!-- Departure and Arrival -->
    <TextView
        android:id="@+id/tvDeparture"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="From: City A"
        android:textSize="14sp"
        android:textColor="@android:color/black"
        android:paddingBottom="2dp" />

    <TextView
        android:id="@+id/tvArrival"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="To: City B"
        android:textSize="14sp"
        android:textColor="@android:color/black"
        android:paddingBottom="4dp" />

    <!-- Travel Date -->
    <TextView
        android:id="@+id/tvTravelDate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Date: 12/24/2025"
        android:textSize="14sp"
        android:textColor="@android:color/black"
        android:paddingBottom="4dp" />

    <!-- Price -->
    <TextView
        android:id="@+id/tvPrice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Price: $50"
        android:textSize="14sp"
        android:textStyle="bold"
        android:textColor="@android:color/holo_orange_dark"
        android:paddingBottom="8dp" />

    <!-- Modify and Cancel Buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <Button
            android:id="@+id/btnModify"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Modify"
            android:backgroundTint="@android:color/holo_green_dark"
            android:textColor="@android:color/white"
            android:padding="8dp" />

        <Button
            android:id="@+id/btnCancel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Cancel"
            android:backgroundTint="@android:color/holo_red_dark"
            android:textColor="@android:color/white"
            android:padding="8dp"
            android:layout_marginStart="8dp" />
    </LinearLayout>

</LinearLayout>
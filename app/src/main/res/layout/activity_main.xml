<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/half_background"
    android:orientation="vertical"
    android:padding="40dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageHamburger"
            android:layout_width="20dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:src="@drawable/hamburger"/>

        <TextView
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:text="HI, ANNA!"
            android:textAlignment="center"
            android:textSize="18sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/imagePfp"
            android:layout_width="45dp"
            android:layout_height="70dp"
            android:layout_weight="1"
            android:background="@drawable/circle_avatar"
            android:clipToOutline="true"
            android:src="@drawable/temp_pfp" />

    </LinearLayout>

    <TextView
        android:id="@+id/tvSubtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="10dp"
        android:text="GET READY FOR YOUR HOLIDAYS!"
        android:textSize="14sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/etSearch"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/round_searchbar"
        android:hint="âŒ• Search"
        android:padding="10dp"
        android:scaleType="centerCrop"
        android:textColor="#FFFFFF"
        android:textColorHint="#FFFFFF" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="30dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="10dp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center">

                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/rounded_button">

                    <ImageButton
                        android:id="@+id/btnFlights"
                        android:layout_width="150dp"
                        android:layout_height="150dp"
                        android:background="@drawable/rounded_button"
                        android:clipToOutline="true"
                        android:scaleType="centerCrop"
                        android:src="@drawable/flight" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom|left"
                        android:layout_margin="8dp"
                        android:background="@drawable/text_bg"
                        android:text="FLIGHTS"
                        android:textColor="#FFFFFF"
                        android:textSize="14sp"
                        android:textStyle="bold" />
                </FrameLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center">

                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <ImageButton
                        android:id="@+id/btnBus"
                        android:layout_width="150dp"
                        android:layout_height="150dp"
                        android:background="@drawable/rounded_button"
                        android:clipToOutline="true"
                        android:scaleType="centerCrop"
                        android:src="@drawable/bus" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom|left"
                        android:layout_margin="8dp"
                        android:background="@drawable/text_bg"
                        android:text="BUS"
                        android:textColor="#FFFFFF"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                </FrameLayout>

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="10dp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center">

                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <ImageButton
                        android:id="@+id/btnTrain"
                        android:layout_width="150dp"
                        android:layout_height="150dp"
                        android:background="@drawable/rounded_button"
                        android:clipToOutline="true"
                        android:scaleType="centerCrop"
                        android:src="@drawable/train" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom|left"
                        android:layout_margin="8dp"
                        android:background="@drawable/text_bg"
                        android:text="TRAIN"
                        android:textColor="#FFFFFF"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                </FrameLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center">

                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <ImageButton
                        android:id="@+id/btnHotels"
                        android:layout_width="150dp"
                        android:layout_height="150dp"
                        android:background="@drawable/rounded_button"
                        android:clipToOutline="true"
                        android:scaleType="centerCrop"
                        android:src="@drawable/hotel" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom|left"
                        android:layout_margin="8dp"
                        android:background="@drawable/text_bg"
                        android:text="HOTEL"
                        android:textColor="#FFFFFF"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                </FrameLayout>

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="10dp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center">

                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <ImageButton
                        android:id="@+id/btnTrips"
                        android:layout_width="150dp"
                        android:layout_height="150dp"
                        android:background="@drawable/rounded_button"
                        android:clipToOutline="true"
                        android:scaleType="centerCrop"
                        android:src="@drawable/trips" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom|left"
                        android:layout_margin="8dp"
                        android:background="@drawable/text_bg"
                        android:text="MY TRIPS"
                        android:textColor="#FFFFFF"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                </FrameLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center">

                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <ImageButton
                        android:id="@+id/btnSettings"
                        android:layout_width="150dp"
                        android:layout_height="150dp"
                        android:background="@drawable/rounded_button"
                        android:clipToOutline="true"
                        android:scaleType="centerCrop"
                        android:src="@drawable/settings" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom|left"
                        android:layout_margin="8dp"
                        android:background="@drawable/text_bg"
                        android:text="SETTINGS"
                        android:textColor="#FFFFFF"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                </FrameLayout>

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
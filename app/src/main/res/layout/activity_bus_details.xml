<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/other_half_background"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Top Bar -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingBottom="16dp">

        <ImageButton
            android:id="@+id/btnBack"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@null"
            android:scaleType="fitCenter"
            android:src="@drawable/back_button" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="BOOK BUS TICKET"
            android:textAlignment="center"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            android:textStyle="bold" />
    </LinearLayout>

    <!-- Booking Card -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/flight_card"
        android:orientation="vertical"
        android:padding="16dp"
        android:elevation="4dp"
        android:layout_marginBottom="16dp">

        <!-- Passenger Name Input -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Passenger Name"
            android:textSize="14sp"
            android:textColor="@android:color/black"
            android:paddingBottom="4dp" />

        <EditText
            android:id="@+id/etPassengerName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_input"
            android:hint="Enter Passenger Name"
            android:inputType="text"
            android:textColor="@android:color/black"
            android:textSize="16sp"
            android:padding="10dp"
            android:layout_marginBottom="12dp" />

        <!-- Bus Information -->
        <TextView
            android:id="@+id/tvBusName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Bus: Express Travels"
            android:textSize="14sp"
            android:textColor="@android:color/black"
            android:textStyle="bold"
            android:paddingBottom="4dp" />

        <!-- Departure and Arrival -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="4dp">

            <TextView
                android:id="@+id/tvDeparture"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="From: City A"
                android:textSize="14sp"
                android:textColor="@android:color/black" />

            <TextView
                android:id="@+id/tvArrival"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="To: City B"
                android:textSize="14sp"
                android:textColor="@android:color/black"
                android:gravity="end" />
        </LinearLayout>

        <!-- Travel Date and Price -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="8dp">

            <TextView
                android:id="@+id/tvTravelDate"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Date: 12/24/2025"
                android:textSize="14sp"
                android:textColor="@android:color/black" />

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/flight_card"
        android:orientation="vertical"
        android:padding="16dp"
        android:elevation="4dp"
        android:layout_marginBottom="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="8dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Payment Details"
                android:textSize="16sp"
                android:textColor="@android:color/black" />


        </LinearLayout>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Card Number"
            android:textSize="14sp"
            android:textColor="@android:color/black"
            android:paddingBottom="4dp" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_input"
            android:hint="Enter Card Number"
            android:inputType="text"
            android:textColor="@android:color/black"
            android:textSize="16sp"
            android:padding="10dp"
            android:layout_marginBottom="12dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Expiry Date"
            android:textSize="14sp"
            android:textColor="@android:color/black"
            android:paddingBottom="4dp" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_input"
            android:hint="Expiry Date (MM/YY)"
            android:inputType="text"
            android:textColor="@android:color/black"
            android:textSize="16sp"
            android:padding="10dp"
            android:layout_marginBottom="12dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="CVV"
            android:textSize="14sp"
            android:textColor="@android:color/black"
            android:paddingBottom="4dp" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_input"
            android:hint="Enter CVV"
            android:inputType="text"
            android:textColor="@android:color/black"
            android:textSize="16sp"
            android:padding="10dp"
            android:layout_marginBottom="12dp" />



    </LinearLayout>

    <!-- Confirm Booking Button -->
    <Button
        android:id="@+id/btnConfirmBooking"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_button"
        android:text="Confirm Payment and Booking"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        android:padding="12dp"/>
</LinearLayout>
